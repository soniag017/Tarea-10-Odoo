<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista lista de ordenadores -->
    <record id="pc_computer_list" model="ir.ui.view">
        <field name="name">pc.computer.list</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <list string="Ordenadores">
                <field name="number"/>
                <field name="user_id"/>
                <field name="total_price"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario de ordenadores -->
    <record id="pc_computer_form" model="ir.ui.view">
        <field name="name">pc.computer.form</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <form string="Ordenador">
                <sheet>
                    <group>
                        <field name="number"/>
                        <field name="user_id"/>
                        <field name="components_ids"/>
                        <field name="last_mod"/>
                        <field name="issues"/>
                        <field name="total_price" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n de ventana para ordenadores -->
    <record id="action_pc_computer" model="ir.actions.act_window">
        <field name="name">Ordenadores</field>
        <field name="res_model">pc.computer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
